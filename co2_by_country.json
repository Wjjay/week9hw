{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "CO2 Emission per capita" },
    "width":1920,
    "height":1080,
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'No data'",
                    "as": "emission"
                }
            ],
            "data": {
                "url": "https://raw.githubusercontent.com/Wjjay/week9hw/main/data/world_map_topo.json",
                "format": { 
                    "type": "topojson",
                    "feature": "world_map"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
            "encoding":{
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "emission",
                        "title": "CO2 Emissions (metric tonnes)"
                        
                    }
                ]
            }
        },       
        

        {
            "data": {
                "url": "https://raw.githubusercontent.com/Wjjay/week9hw/main/data/world_map_topo.json",
                "format": { 
                    "type": "topojson",
                    "feature": "world_map"}
                },
                "transform": [
                    {
                        "lookup": "properties.name",
                        "from": {
                            "data": {
                                "url": "https://raw.githubusercontent.com/Wjjay/week9hw/main/data/API_EN.ATM.CO2E.PC_DS2_en_csv_v2_10576797.csv"
                            },
                            "key": "Country Name",
                            "fields": ["2014"]
                        }
                    }
                ],
                
                "mark": {
                        "type": "geoshape",
                        "stroke": "black"
                    },
                    
                "encoding": {
                    "color":{
                        "field": "2014",
                        "type": "quantitative"
                    },
                    "tooltip": [
                        {
                            "field": "properties.name", 
                            "type": "nominal", 
                            "title": "Country"
                        },
                        {
                            "field": "2014",
                            "type": "quantitative",
                            "title": "CO2 Emissions (metric tonnes)",
                            "format": ".3f"
                        }
                    ]
                }
            }
        ]
            
        
    
    
}
